@import "{retronator:artificialengines}/mirage/helpers.import"
@import "{retronator:landsofillusions}/styles/atari2600.import"
@import "{retronator:landsofillusions}/typography/typography.import"

.apps-drawing
  .sprite-canvas
    position absolute
    left: 50%
    top: 50%
    transform: translate(-50%, -50%)
    background atari2600colors[7][0]
    color atari2600colors[1][0]
    cursor default
    box-shadow 4rem 4rem 0 0 rgba(174, 123, 60, 0.5)

    .canvas-shadow
      position absolute
      top 0
      left 0
      width calc((163/161)*100%) //ratio of shadow image size to canvas image size
      height calc((163/161)*100%) //ratio of shadow image size to canvas image size
      pointer-events none

    .canvas-background
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      z-index -1
      pointer-events none

    .content
      display block

      &.color-picker-active
        cursor context-menu

  .drawing-paper
    position absolute
    top 55rem
    left -3rem
    width 61rem
    height 99rem

  &.in-sprite-selection
    .sprite-canvas
      top: 110%
      transform: translate(-50%, 0)

    .drawing-paper
      left -68rem

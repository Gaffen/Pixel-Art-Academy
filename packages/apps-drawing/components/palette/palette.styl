@import "{retronator:landsofillusions}/styles/cursors.import"

.apps-drawing
  .palette
    position absolute
    top calc(50% + 30rem)
    right 8rem
    width 40rem
    transform translate(0,-50%)
    display flex
    flex-direction row
    flex-wrap wrap-reverse

    .palette-case
      position absolute
      top -3rem
      left 0
      width 48rem
      height 139rem
      pointer-events none

    .palette-shadow
      position absolute
      height 8rem
      width 43rem
      top 132rem
      right -8rem
      z-index -1

    .ramp
      width 20rem
      height 16rem

      .color
        width 100%
        height 100%
        position relative
        cursor pointer

        &::after
          content ''
          display none
          position absolute
          top -1rem
          bottom -1rem
          left -1rem
          right -1rem
          z-index 1
          border 1rem dotted lightgrey

        &.active::after
          display block

  &.in-sprite-selection
    .palette
      right -50rem

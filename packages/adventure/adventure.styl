@import "{retronator:landsofillusions}/typography/typography.import"
@import "{retronator:landsofillusions}/styles/atari2600.import"

html.pixel-art-academy-style-adventure
  margin 0
  padding 0
  background atari2600colors[7][10]
  color white

  *
    box-sizing border-box

  // Pixel art image scaling
  img
  canvas
    image-rendering optimizeSpeed
    image-rendering -moz-crisp-edges            // Firefox
    image-rendering -o-crisp-edges              // Opera
    image-rendering -webkit-optimize-contrast   // Chrome, Safari
    image-rendering pixelated                   // Chrome
    image-rendering optimize-contrast           // CSS3
    -ms-interpolation-mode nearest-neighbor     // IE8+

  body
    margin 0
    padding 0
    uni()

  .adventure
    .display
      .location
        min-height 100rem
        background atari2600colors[5][10]

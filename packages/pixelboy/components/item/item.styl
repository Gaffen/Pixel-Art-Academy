@import "{retronator:artificialengines}/mirage/helpers.import"
@import "{retronator:landsofillusions}/styles/atari2600.import"

.pixelboy
  position fixed
  bottom -100vh
  left 50%
  transform translateX(-50%)
  transition bottom 1s

  &.activated
    bottom 20rem

  // The hand holding the pixelboy.
  .hand
    position absolute
    width 55rem
    height 120rem
    left -44rem
    bottom -35rem

    img
      width 100%
      height 100%

    &::after
      content ''
      position absolute
      right 0
      bottom 30rem
      width 3rem
      height 3rem
      z-index -1
      background atari2600colors[4][3]

  .os
    // We can't use absolute-cover() because we're styling the width/height
    // of a canvas which need to be overriden directly from css.
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background atari2600colors[0][10]
    border none

  .screen
    position absolute
    left -1rem
    top -1rem
    right -1rem
    bottom -1rem
    border solid 1rem atari2600colors[1][0]
    box-shadow:
      0 2rem 0 -1rem atari2600colors[2][0],
      -1rem 1rem atari2600colors[3][0]

  .glass
    position absolute
    left -4rem
    top -4rem
    right -4rem
    bottom -4rem
    border solid 1rem atari2600colors[7][0]
    opacity 0.75
    box-shadow -1rem 1rem atari2600colors[5][0]

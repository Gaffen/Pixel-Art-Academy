@import "{retronator:artificialengines}/mirage/helpers.import"
@import "{retronator:landsofillusions}/styles/atari2600.import"

.pixelboy
  position fixed
  bottom -100vh
  left 50%
  transform translateX(-50%)
  color white
  background black
  border solid 1rem atari2600colors[1][0]
  transition bottom 1s

  &.activated
    bottom 20rem

  .os
    // We can't use absolute-cover() because we're styling the width/height
    // of a canvas which need to be overriden directly from css.
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background atari2600colors[0][10]
    border none

  .glass
    position absolute
    left -3rem
    top -3rem
    right -3rem
    bottom -3rem
    border solid 1rem atari2600colors[7][0]
    opacity 0.75

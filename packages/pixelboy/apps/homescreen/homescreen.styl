@import "{retronator:landsofillusions}/typography/typography.import"

.apps-homescreen
  list-style none
  padding 0
  uni()
  text-align center

  li
    display inline-block
    text-transform uppercase
    text-align center

  .app-icon
    display inline-block !important //forcing inline-block bc velocity not registering it
    opacity 0
    vertical-align top
    padding 0 5rem
    max-width 70rem

    &:hover
      cursor pointer
      background transparent
      font-weight bold

      a
        background-color transparent
        color #ccc

      .icon
        animation bounce 1s step-start 0s infinite
        -webkit-animation bounce 1s step-start 0s infinite

    .icon
      width 50rem
      height 50rem
      background #b4d455
      margin 0 auto 5rem auto

@keyframes bounce
  50%
    transform translateY(-5rem)

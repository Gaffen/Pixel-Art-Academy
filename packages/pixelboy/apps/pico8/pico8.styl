.apps-pico8
  text-align center

  .pico-app-screen
    position relative

    .pico-container
      background black
      padding 10rem
      margin auto
      display inline-block

      canvas
        width 128rem
        height 128rem

    .pico-controller
      width calc( (100% - 135rem)/2 )
      margin auto

      &.action-buttons
        position absolute
        top 50%
        transform translateY(-50%)
        left 0

        .action-button
          text-align center
          color rgb(238, 238, 238)
          border-radius 50%
          margin 0
          font-size 8rem
          width 18rem
          height 18rem
          border 0 none
          box-shadow 0 2rem 0 0 rgba(64, 64, 64, 1)
          top initial
          margin 0 5rem;

          &[value="4"]
            top -9rem

          &[value="5"]
            top 9rem

          &:hover
            background #666666

          &:active
            transform translateY(2rem)
            box-shadow 0 0 0 0 rgba(64, 64, 64, 1)

      &.d-pad-container
        position absolute
        top 50%
        transform translateY(-50%)
        right 0

        .d-pad
          width 54rem
          height 54rem
          position relative
          margin auto

          .d-pad-direction
            position absolute
            z-index 1
            text-align center
            color rgb(238, 238, 238)
            margin 0
            font-size 8rem
            width 18rem
            height 18rem
            border 0 none
            background transparent
            top initial

            &.up
              top 0
              left 50%
              transform translateX(-50%)

            &.right
              top 50%
              right 0
              transform translateY(-50%)

            &.down
              bottom 0
              left 50%
              transform translateX(-50%)

            &.left
              top 50%
              left 0
              transform translateY(-50%)

          .d-pad-keycap
            position absolute
            top 0
            left 0
            width 100%
            height 100%
            z-index -1

            &::before
              content ''
              background-color #666666
              position absolute
              top 50%
              left 0
              transform translateY(-50%)
              height 18rem
              width 100%
              box-sizing content-box

              //3d button look
              border-bottom 3rem solid #404040

            &::after
              content ''
              background-color #666666
              position absolute
              top 0
              left 50%
              transform translateX(-50%)
              width 18rem
              height 100%
              box-sizing content-box

              //3d button look
              border-bottom 3rem solid #404040

          //keycap pressed states
          .d-pad-direction:active ~ .d-pad-keycap
            transform translateY(2rem)
            &::before
              border-width 0 0 1rem 0

            &::after
              border-width: 0 0 1rem 0
